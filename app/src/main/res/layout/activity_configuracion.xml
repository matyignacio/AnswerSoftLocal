<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#d6d6d6"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_uiconfiguracion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.desarrollo.kuky.answersoft.ui.UIConfiguracion">

        <TextView
            android:id="@+id/tvTitulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="Configuracion de conexion"
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvDireccionIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvTitulo"
            android:layout_marginTop="30dp"
            android:text="Direccion IP:" />

        <EditText
            android:id="@+id/etDireccionIP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvDireccionIP"
            android:ems="20"
            android:hint="Ej: 192.168.1.1"
            android:inputType="text"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvPuerto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etDireccionIP"
            android:layout_marginTop="30dp"
            android:text="Puerto:" />

        <EditText
            android:id="@+id/etPuerto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvPuerto"
            android:ems="20"
            android:hint="Ej: 3306"
            android:inputType="text"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvNombreBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etPuerto"
            android:layout_marginTop="30dp"
            android:text="Base de datos:" />

        <EditText
            android:id="@+id/etNombreBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvNombreBase"
            android:ems="20"
            android:hint="Ingrese el nombre de la base"
            android:inputType="text"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvUserBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etNombreBase"
            android:layout_marginTop="30dp"
            android:text="Usuaro:" />

        <EditText
            android:id="@+id/etUserBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvUserBase"
            android:ems="20"
            android:hint="Ingrese el nombre de usuario"
            android:inputType="text"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/tvPassBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/etUserBase"
            android:layout_marginTop="30dp"
            android:text="Contraseña:" />

        <EditText
            android:id="@+id/etPassBase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tvPassBase"
            android:ems="20"
            android:hint="Ingrese la contraseña de usuario"
            android:inputType="textPassword"
            android:textColor="@android:color/black" />

        <Button
            android:text="Aceptar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPassBase"
            android:id="@+id/bAceptar"
            android:onClick="insertarConfiguracion"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            style="@style/botonRojoBlanco"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</ScrollView>