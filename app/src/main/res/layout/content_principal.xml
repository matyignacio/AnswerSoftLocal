<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layout_primary"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.UIPrincipal"
    tools:showIn="@layout/app_bar_principal">

    <RelativeLayout
        style="@style/background_card"
        android:layout_marginTop="50dp">

        <TextView
            android:id="@+id/tvBienvenidoUsuario"
            style="@style/tv_primary_bold_left"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="TextView"
            android:textSize="25dp" />

        <Button
            android:id="@+id/bClientes"
            style="@style/b_primary"
            android:layout_below="@id/tvBienvenidoUsuario"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Lista clientes" />

        <Button
            android:id="@+id/bProductos"
            style="@style/b_primary"
            android:layout_below="@id/bClientes"
            android:layout_centerHorizontal="true"
            android:text="Lista productos" />

        <Button
            android:id="@+id/bPresupuestos"
            style="@style/b_primary"
            android:layout_below="@id/bProductos"
            android:layout_centerHorizontal="true"
            android:text="Presupuestos Recientes" />
    </RelativeLayout>
</RelativeLayout>
